{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Accounting Service",
            "detail": "Helper task--use 'Accounting Service' task to ensure environment is set up correctly",
            "type": "shell",
            "command": "./mvnw spring-boot:run",
            "options": {
                "cwd": "${workspaceFolder}/src/accounting-service/"
            },
            "presentation": {
                "panel": "dedicated",
            },
            "problemMatcher": []
        },
        {
            "label": "Build Accounting Service",
            "command": "./mvnw",
            "type": "shell",
            "dependsOn": "Dapr Accounting Service",
            "options": {
                "cwd": "${workspaceFolder}/src/accounting-service/"
            },
            "args": [
                "package",
                "-DskipTests"
            ],
            "problemMatcher": []
        },
        {
            "label": "Dapr Accounting Service",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "accounting-service",
                "--components-path",
                "${workspaceFolder}/infra/components/accounting-service",
                "--app-port",
                "8707",
                "--dapr-grpc-port",
                "5101",
                "--dapr-http-port",
                "5180"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "beginsPattern": "^.*Starting Dapr.*",
                    "endsPattern": "^.*You're up and running!.*"
                }
            }
        },
        {
            "label": "Dapr Stop Accounting Service",
            "command": "dapr",
            "args": [
                "stop",
                "accounting-service"
            ]
        },
    ]
}
